generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String?
  customers Customer[]
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model History {
  id          Int      @id @default(autoincrement())
  action      String
  userId      Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}